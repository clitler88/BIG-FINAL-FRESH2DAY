<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20;"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ch.makery.address.view.CartController">

    <!-- Header -->
    <Text style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Shopping Cart" />

    <!-- Dynamic items container -->
    <VBox fx:id="cartItemsBox" spacing="10"
          style="-fx-background-color: #f8f9fa; -fx-padding: 10;" />

    <!-- Footer -->
    <HBox alignment="CENTER_RIGHT" spacing="20">
        <Text fx:id="totalPriceText" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <!-- Checkout button (no onAction yet) -->
        <Button fx:id="checkoutButton"
                style="-fx-background-color: #2a9d8f; -fx-text-fill: white;"
                text="Checkout" />
    </HBox>
</VBox>
